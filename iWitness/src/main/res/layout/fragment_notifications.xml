<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notifications_bg"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize">


    <RelativeLayout
        android:id="@+id/llBaseMid_Videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_linear1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/iv_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bullet" />

                <TextView
                    android:id="@+id/tv_point1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="text1"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_below="@+id/ll_linear1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_below="@+id/ll_linear1"
                android:id="@+id/ll_linear2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">


                <ImageView
                    android:id="@+id/iv_point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bullet" />

                <TextView
                    android:id="@+id/tv_point2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_below="@+id/ll_linear2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/ll_linear3"
                android:layout_below="@+id/ll_linear2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_bullet" />

                <TextView
                    android:id="@+id/tv_point3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="text3"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_below="@+id/ll_linear3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>