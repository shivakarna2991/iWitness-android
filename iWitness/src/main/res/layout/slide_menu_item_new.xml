<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/nav_drawer_row_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/nav_drawer_icon_margin_left"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/nav_drawer_icon_text_margin_left"
        android:gravity="left|center_vertical"
        android:text="dfdsfdsfdsf"
        android:textColor="@android:color/white"
        android:textSize="@dimen/nav_drawer_text_size" />

</LinearLayout>

