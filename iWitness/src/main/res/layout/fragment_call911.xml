<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/master_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <!--<ImageView android:id="@+id/imvCall911"-->
    <!--android:layout_width="230dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:src="@drawable/img_call_911"-->
    <!--android:layout_centerHorizontal="true" />-->
    <TextView
            android:id="@+id/tvBeingCall911"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="@string/being_call_911"
            android:textColor="@android:color/white"
            android:textSize="32sp"/>
    <TextView
            android:id="@+id/tvCall911"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="60sp"
            android:text="@string/called"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvBeingCall911"/>

    <Button android:id="@+id/btnCancel"
            android:background="@drawable/bg_cancel"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="@string/cancel"
            style="@style/TextView"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tvCall911"
            android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/lblTimer"
              android:background="@drawable/bg_timer"
              android:text="5:00"
              android:textSize="19sp"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:gravity="center_vertical|center_horizontal"/>

    <ImageView android:layout_width="150dp"
               android:layout_height="60dp"
               android:layout_marginBottom="10dp"
               android:src="@drawable/img_5secs"
               android:layout_centerHorizontal="true" android:layout_above="@id/lblTimer"/>

</RelativeLayout>